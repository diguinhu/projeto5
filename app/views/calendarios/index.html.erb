<h1>Listing calendarios</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Viagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendarios.each do |calendario| %>
      <tr>
        <td><%= calendario.user.name %></td>
        <td><%= calendario.viagem.name %></td>
        <td><%= link_to 'Show', calendario %></td>
        <td><%= link_to 'Edit', edit_calendario_path(calendario) %></td>
        <td><%= link_to 'Destroy', calendario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Calendario', new_calendario_path %>
<%= link_to 'Return to Viagems', viagems_path %>
